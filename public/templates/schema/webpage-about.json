{
  "name": "About Page",
  "type": "AboutPage",
  "description": "تمپلیت برای صفحات درباره ما",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "{{title}}",
    "description": "{{excerpt}}",
    "url": "{{url}}",
    "mainEntity": "{{content}}",
    "breadcrumb": "{{breadcrumb}}",
    "publisher": {
      "@type": "Organization",
      "name": "{{site_name}}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{site_logo}}"
      },
      "foundingDate": "{{founding_date}}",
      "description": "{{company_description}}",
      "mission": "{{mission}}",
      "vision": "{{vision}}"
    }
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{excerpt}}",
    "keywords": "{{keywords}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{excerpt}}",
    "image": "{{featured_image}}",
    "type": "website",
    "site_name": "{{site_name}}"
  }
} 