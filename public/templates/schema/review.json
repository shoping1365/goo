{
  "name": "Review",
  "type": "Review",
  "description": "تمپلیت برای نظرات",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "Review",
    "name": "{{title}}",
    "reviewBody": "{{review_text}}",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "{{rating}}",
      "bestRating": "5",
      "worstRating": "1"
    },
    "author": {
      "@type": "Person",
      "name": "{{author_name}}",
      "url": "{{author_url}}"
    },
    "datePublished": "{{published_at}}",
    "dateModified": "{{updated_at}}",
    "itemReviewed": {
      "@type": "{{item_type}}",
      "name": "{{item_name}}",
      "url": "{{item_url}}",
      "image": "{{item_image}}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{site_name}}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{site_logo}}"
      }
    }
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{excerpt}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{excerpt}}",
    "type": "website",
    "site_name": "{{site_name}}"
  }
} 