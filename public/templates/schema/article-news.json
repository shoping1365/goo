{
  "name": "News Article",
  "type": "NewsArticle",
  "description": "تمپلیت برای مقالات خبری",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "NewsArticle",
    "headline": "{{title}}",
    "description": "{{excerpt}}",
    "author": {
      "@type": "Person",
      "name": "{{author}}",
      "url": "{{author_url}}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{site_name}}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{site_logo}}"
      }
    },
    "datePublished": "{{published_at}}",
    "dateModified": "{{updated_at}}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{url}}"
    },
    "image": {
      "@type": "ImageObject",
      "url": "{{featured_image}}",
      "width": "{{image_width}}",
      "height": "{{image_height}}"
    },
    "articleSection": "{{category_name}}",
    "keywords": "{{keywords}}",
    "wordCount": "{{word_count}}",
    "timeRequired": "PT{{reading_time}}M",
    "articleBody": "{{content}}",
    "inLanguage": "fa",
    "isAccessibleForFree": "true",
    "dateline": "{{dateline}}",
    "printSection": "{{print_section}}",
    "printPage": "{{print_page}}"
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{excerpt}}",
    "keywords": "{{keywords}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{excerpt}}",
    "image": "{{featured_image}}",
    "type": "article",
    "site_name": "{{site_name}}",
    "published_time": "{{published_at}}",
    "modified_time": "{{updated_at}}",
    "author": "{{author}}"
  }
} 