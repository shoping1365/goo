{
  "name": "Breadcrumb List",
  "type": "BreadcrumbList",
  "description": "تمپلیت برای مسیر ناوبری",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "خانه",
        "item": "{{home_url}}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{category_name}}",
        "item": "{{category_url}}"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{page_name}}",
        "item": "{{page_url}}"
      }
    ]
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{description}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{description}}",
    "type": "website",
    "site_name": "{{site_name}}"
  }
} 