{
  "name": "Organization",
  "type": "Organization",
  "description": "تمپلیت برای سازمان‌ها",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{title}}",
    "description": "{{description}}",
    "url": "{{url}}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{logo}}",
      "width": "{{logo_width}}",
      "height": "{{logo_height}}"
    },
    "image": "{{featured_image}}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "{{address}}",
      "addressLocality": "{{city}}",
      "addressRegion": "{{state}}",
      "postalCode": "{{postal_code}}",
      "addressCountry": "{{country}}"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "{{telephone}}",
      "email": "{{email}}",
      "contactType": "customer service",
      "availableLanguage": "fa"
    },
    "sameAs": "{{social_media_links}}",
    "foundingDate": "{{founding_date}}",
    "numberOfEmployees": {
      "@type": "QuantitativeValue",
      "value": "{{employee_count}}"
    }
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{description}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{description}}",
    "image": "{{logo}}",
    "type": "website",
    "site_name": "{{site_name}}"
  }
} 