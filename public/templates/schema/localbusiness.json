{
  "name": "Local Business",
  "type": "LocalBusiness",
  "description": "تمپلیت برای کسب و کار محلی",
  "isActive": true,
  "template": {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "{{title}}",
    "description": "{{description}}",
    "url": "{{url}}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{logo}}",
      "width": "{{logo_width}}",
      "height": "{{logo_height}}"
    },
    "image": "{{featured_image}}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "{{address}}",
      "addressLocality": "{{city}}",
      "addressRegion": "{{state}}",
      "postalCode": "{{postal_code}}",
      "addressCountry": "{{country}}"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "{{telephone}}",
      "email": "{{email}}",
      "contactType": "customer service",
      "availableLanguage": "fa"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "{{latitude}}",
      "longitude": "{{longitude}}"
    },
    "openingHoursSpecification": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "{{working_days}}",
      "opens": "{{opens_time}}",
      "closes": "{{closes_time}}"
    },
    "priceRange": "{{price_range}}",
    "paymentAccepted": "{{payment_methods}}",
    "currenciesAccepted": "{{currencies}}",
    "areaServed": {
      "@type": "Country",
      "name": "{{area_served}}"
    }
  },
  "meta": {
    "title": "{{title}} - {{site_name}}",
    "description": "{{description}}"
  },
  "openGraph": {
    "title": "{{title}}",
    "description": "{{description}}",
    "image": "{{logo}}",
    "type": "website",
    "site_name": "{{site_name}}"
  }
} 