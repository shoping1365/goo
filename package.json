{
  "name": "my-shop",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/hide-backup.cjs",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=16384 --max-semi-space-size=512\" UV_THREADPOOL_SIZE=256 NODE_ENV=production nuxt build",
    "build:large": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576 --max-semi-space-size=1024 --expose-gc\" UV_THREADPOOL_SIZE=512 NODE_ENV=production nuxt build",
    "build:memory": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" UV_THREADPOOL_SIZE=128 nuxt build --parallel --no-fork-ts-checker",
    "build:debug": "cross-env NODE_OPTIONS=\"--max-old-space-size=20192\" nuxt build --verbose",
    "postbuild": "node scripts/restore-backup.cjs",
    "dev": "cross-env NODE_OPTIONS=\"--max-old-space-size=16192\" nuxt dev",
    "generate": "cross-env NODE_OPTIONS=\"--max-old-space-size=16288\" nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "echo \"No tests specified\" && exit 0",
    "type-check": "cross-env NODE_OPTIONS=\"--max-old-space-size=20192\" vue-tsc --noEmit",
    "build:pm2": "npm run build && pm2 start ecosystem.config.cjs --only go-nuxt",
    "prerender:pm2": "pm2 start ecosystem.config.cjs --only go-nuxt-prerender",
    "server:pm2": "pm2 start ecosystem.config.cjs --only go-nuxt",
    "full:pm2": "npm run build && pm2 start ecosystem.config.cjs --only go-nuxt-prerender && pm2 start ecosystem.config.cjs --only go-nuxt"
  },
  "engines": {
    "node": ">=24.11.0",
    "npm": ">=11.6.1"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@modelcontextprotocol/server-filesystem": "^2025.7.1",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^10.0.0",
    "nuxt": "^4.1.2",
    "typescript": "^5.8.3",
    "vite-plugin-checker": "^0.11.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vue-tsc": "^3.1.3"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.11.2",
    "@prisma/client": "^6.17.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "@tinymce/tinymce-vue": "^6.3.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vuepic/vue-datepicker": "^12.0.3",
    "autoprefixer": "10.4.21",
    "axios": "^1.11.0",
    "chart.js": "^4.5.0",
    "checker": "^0.5.2",
    "dayjs": "^1.11.13",
    "dompurify": "^3.3.0",
    "h3": "^1.15.4",
    "hls.js": "^1.6.10",
    "jsonwebtoken": "^9.0.2",
    "nuxt-security": "^2.4.0",
    "nuxt-swiper": "2.0.1",
    "openai": "^6.8.1",
    "papaparse": "^5.5.3",
    "persian-date": "^1.1.0",
    "pg": "^8.16.3",
    "pinia": "^3.0.3",
    "plugin": "^0.0.15",
    "plyr": "^3.8.3",
    "slugify": "1.6.6",
    "socket.io-client": "4.8.1",
    "swiper": "^12.0.3",
    "tailwindcss": "^4.1.12",
    "uuid": "^13.0.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "vue3-select": "^0.1.2",
    "vue3-toastify": "0.2.8"
  },
  "overrides": {
    "rimraf": "^4.4.1",
    "glob": "^9.3.5"
  }
}
