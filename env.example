# ===========================================
# تنظیمات محیطی فرانت‌اند (Nuxt 4)
# ===========================================

# ===========================================
# تنظیمات عمومی پروژه
# ===========================================

# محیط اجرا (development, staging, production)
NODE_ENV=development

# پورت فرانت‌اند
NUXT_PORT=3000

# ===========================================
# تنظیمات API و Backend
# ===========================================

# آدرس پایه API بک‌اند Go
NUXT_PUBLIC_GO_API_BASE=http://localhost:9090

# آدرس پایه WebSocket
NUXT_PUBLIC_WS_BASE=ws://localhost:9090

# آدرس پایه API قدیمی (برای سازگاری)
NUXT_PUBLIC_API_BASE=http://localhost:9090

# ===========================================
# تنظیمات امنیتی Cloudflare Turnstile
# ===========================================

# کلید عمومی Turnstile (قابل مشاهده در فرانت‌اند)
NUXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# کلید مخفی Turnstile (فقط در سرور)
NUXT_TURNSTILE_SECRET_KEY=your-secret-key-here

# ===========================================
# تنظیمات محیط‌های مختلف
# ===========================================

# برای Development
# NODE_ENV=development
# NUXT_PUBLIC_GO_API_BASE=http://localhost:9090
# NUXT_PUBLIC_WS_BASE=ws://localhost:9090

# برای Staging
# NODE_ENV=staging
# NUXT_PUBLIC_GO_API_BASE=https://api-staging.yourdomain.com
# NUXT_PUBLIC_WS_BASE=wss://api-staging.yourdomain.com

# برای Production
# NODE_ENV=production
# NUXT_PUBLIC_GO_API_BASE=https://api.yourdomain.com
# NUXT_PUBLIC_WS_BASE=wss://api.yourdomain.com

# ===========================================
# تنظیمات PM2 (اختیاری)
# ===========================================

# پورت فرانت‌اند برای PM2
FRONTEND_PORT=3000

# مسیر دایرکتوری deployment
DEPLOY_DIR=/opt/shared

# ===========================================
# تنظیمات بهینه‌سازی Build
# ===========================================

# حداکثر حافظه برای Node.js
NODE_OPTIONS=--max-old-space-size=16384

# تعداد thread pool
UV_THREADPOOL_SIZE=128

# ===========================================
# تنظیمات اضافی (در صورت نیاز)
# ===========================================

# تنظیمات خاص پروژه
# PROJECT_NAME=go-nuxt
# PROJECT_VERSION=1.0.0

# تنظیمات لاگ
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# تنظیمات کش
# CACHE_TTL=3600
# CACHE_MAX_SIZE=1000

# ===========================================
# راهنمای استفاده
# ===========================================

# 1. این فایل را کپی کنید و نام آن را به .env تغییر دهید
# 2. مقادیر مناسب را برای محیط خود تنظیم کنید
# 3. فایل .env را به .gitignore اضافه کنید
# 4. برای محیط‌های مختلف، فایل‌های جداگانه ایجاد کنید:
#    - .env.development
#    - .env.staging  
#    - .env.production

# ===========================================
# نکات مهم
# ===========================================

# - متغیرهای با پیشوند NUXT_PUBLIC_ در فرانت‌اند قابل دسترسی هستند
# - متغیرهای بدون این پیشوند فقط در سرور قابل دسترسی هستند
# - هرگز کلیدهای مخفی را در متغیرهای عمومی قرار ندهید
# - برای تغییرات، سرور را restart کنید
